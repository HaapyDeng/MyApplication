<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myChart="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hikvision.myapplication.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center_vertical"
                android:text="宿舍-入口监控"
                android:textColor="#FFFFFFFF"
                android:textSize="20dp" />

            <SurfaceView
                android:id="@+id/v1"
                android:layout_width="400dp"
                android:layout_height="300dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="33dp"
            android:layout_height="333dp"
            android:contentDescription="TODO" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center_vertical"
                android:text="宿舍-出口监控"
                android:textColor="#FFFFFFFF"
                android:textSize="20dp" />

            <SurfaceView
                android:id="@+id/v2"
                android:layout_width="400dp"
                android:layout_height="300dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="912dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="@string/out_in_co"
                android:textColor="#FFFFFFFF"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/color1"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="7"
                    android:background="@color/color1"
                    android:ems="1"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="@string/in"
                    android:textColor="#27E6FF"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/customBarChart1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/time_hour"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:textColor="#6AEEFF"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/time_year"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="top|center_horizontal"
                        android:textColor="#6AEEFF"
                        android:textSize="16dp" />

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#666666" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/color1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="7"
                    android:background="@color/color1"
                    android:ems="1"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="@string/out"
                    android:textColor="#FF6464"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/customBarChart2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tianqi_img"
                        android:layout_width="match_parent"
                        android:layout_height="80dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/week"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#6AEEFF"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="·"
                            android:textColor="#6AEEFF" />

                        <TextView
                            android:id="@+id/tianqi_text"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="多云"
                            android:textColor="#6AEEFF"
                            android:textSize="18dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="33dp"
            android:layout_height="280dp"
            android:contentDescription="TODO" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="912dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="@string/now_time_co"
                android:textColor="#FFFFFFFF"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_weight="7"
                    android:background="@color/color1"
                    android:ems="1"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="楼层寝室"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/list_pager"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_weight="3" />

                <!--<GridView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="240dp"-->
                <!--android:layout_weight="3"-->
                <!--android:horizontalSpacing="10dp"-->
                <!--android:numColumns="5"-->
                <!--android:paddingTop="15dp"-->
                <!--android:stretchMode="columnWidth"-->
                <!--android:verticalSpacing="10dp">-->

                <!--</GridView>-->

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_weight="5" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FF223137"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="10"
            android:gravity="center_vertical"
            android:paddingLeft="32dp"
            android:text="通知："
            android:textColor="#FF6AEEFF"
            android:textSize="20dp" />

        <com.hikvision.myapplication.MarqureeTextView
            android:id="@+id/notice"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试"
            android:textColor="#FF6AEEFF"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>